<div class="middle-content mx-auto  p-3 mb-5 card text-center shadow " style="height: 55rem; width: 30rem;">
  <%= image_tag('logo.svg', alt: 'Description', class: 'w-25 h-25 mx-auto ')%>
  <h1>Create an account</h1>
  <div>
  <% @user.errors.messages.values.each do |message| %>
    <%  message.each do |m| %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= m %>
    </div>
    <% end %>
  <% end %>
  </div>
 <%= render 'user_form' %>
 <%= link_to 'Sign in', login_path, class: "btn my-bg-darker w-75 mx-auto mt-2 text-light "%>
</div>


